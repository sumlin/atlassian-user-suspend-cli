# Atlassian User Suspend CLI Configuration
# Copy this file to .env and fill in your values

# Organization ID from Atlassian Admin URL
# Example: https://admin.atlassian.com/o/YOUR-ORG-ID/overview
ORG_ID=your-organization-id

# API Key from Atlassian Admin > Settings > API keys
# IMPORTANT: Create API key WITHOUT scope!
API_KEY=your-api-key

# API Configuration
API_BASE_URL=https://api.atlassian.com
TIMEOUT=30

# File and Directory Settings
DEFAULT_CSV_FILE=users.csv
LOGS_DIR=logs

# Processing Settings
DEFAULT_DELAY=0.5
MAX_RETRIES=3
RETRY_DELAY=1.0

# Interactive Mode Settings
# Set to true to skip confirmation prompts (non-interactive mode)
NON_INTERACTIVE=false

# Optional: Enable debug mode for troubleshooting
# DEBUG=true